name: PR run

on :
  workflow_run:
    workflows: ["PR check"]
    branches: [develop]
    types: 
      - completed
      - requested

jobs:
  on-success:
    runs-on: ubuntu-latest
    if: ${{ github.event.workflow_run.conclusion == 'success' }}    
    steps:
    - uses: actions/checkout@v2
    - name: Setup JDK 14
      uses: actions/setup-java@v2
      with:
        java-version: '14'
        distribution: 'adopt'

  on-failure:
    runs-on: ubuntu-latest
    if: ${{ github.event.workflow_run.conclusion == 'failure' }}
    - name: Setup Ruby
      uses: ruby/setup-ruby@v1
      with:
        bundler-cache: true


